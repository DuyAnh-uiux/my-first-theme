{{ 'featured-collection.css' | asset_url | stylesheet_tag }}

<div class="duyanh-featured-collection">
  <h2>{{ section.settings.heading }}</h2>

  {% assign collection = collections[section.settings.collection] %}

  {% if collection and collection.products.size > 0 %}
    <div class="grid">
      {% for product in collection.products limit: section.settings.product_limit %}
        <div class="product-card">
          {% if product.featured_media %}
            <img 
              src="{{ product.featured_media | image_url: width: 400 }}"
              width="{{ product.featured_media.width }}"
              height="{{ product.featured_media.height }}"
              alt="{{ product.featured_media.alt | escape }}"
            >
          {% endif %}
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </div>
      {% endfor %}
    </div>

    <a class="view-all" href="{{ collection.url }}">Xem tất cả</a>
  {% else %}
    <p>Chưa có sản phẩm trong collection này.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sản phẩm nổi bật"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Chọn collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Số sản phẩm hiển thị",
      "min": 1,
      "max": 12,
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Duy Anh Featured Collection"
    }
  ]
}
{% endschema %}
